colorscheme gruvbox
set-face MatchingChar black,yellow

hook global WinCreate .* %{
    add-highlighter number_lines
    add-highlighter wrap
    add-highlighter show_matching
    add-highlighter show_whitespaces
}

map global insert <tab> '<a-;><gt>'
map global insert <backtab> '<a-;><lt>'

set global indentwidth 4
set global scrolloff 3,5

map global user n ':lint-next-error<ret>'
map global user N ':lint-prev-error<ret>'
map global user l ':lint<ret>'
hook global WinSetOption filetype=python %{
    lint-enable
    lint
}
